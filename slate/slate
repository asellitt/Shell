# Constants
config defaultToCurrentScreen true
config nudgePercentOf         screenSize
config resizePercentOf        screenSize

# Shortcut Aliases
alias trex ctrl;shift;alt;cmd

# Monitor Aliases
alias mon-mac 0
alias mon-ext 1

# Abstract Position Aliases
alias full        move screenOriginX;screenOriginY screenSizeX;screenSizeY
alias lefthalf    move screenOriginX;screenOriginY screenSizeX/2;screenSizeY
alias righthalf   move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY
alias tophalf     push top bar-resize:screenSizeY/2
alias bottomhalf  push bottom bar-resize:screenSizeY/2
alias topleft     corner top-left resize:screenSizeX/2;screenSizeY/2
alias topright    corner top-right resize:screenSizeX/2;screenSizeY/2
alias bottomleft  corner bottom-left resize:screenSizeX/2;screenSizeY/2
alias bottomright corner bottom-right resize:screenSizeX/2;screenSizeY/2

# Move Window Bindings
bind pad1:cmd ${bottomleft}
bind pad2:cmd ${bottomhalf}
bind pad3:cmd ${bottomright}
bind pad4:cmd ${lefthalf}
bind pad5:cmd ${full}
bind pad6:cmd ${righthalf}
bind pad7:cmd ${topleft}
bind pad8:cmd ${tophalf}
bind pad9:cmd ${topright}

# Move Monitor Bindings
bind pad4:ctrl;cmd throw ${mon-mac} resize
bind pad6:ctrl;cmd throw ${mon-ext} resize

# Move Space Bindings
#
# Not supported yet
#

# Size Window Bindings
bind pad4:ctrl;alt       resize -10% +0 top-right
bind pad6:ctrl;alt       resize +10% +0 top-left
bind pad8:ctrl;alt       resize +0 -10% bottom-left
bind pad2:ctrl;alt       resize +0 +10% top-left
bind pad4:ctrl;alt;shift resize +10% +0 top-right
bind pad6:ctrl;alt;shift resize -10% +0 top-left
bind pad8:ctrl;alt;shift resize +0 +10% bottom-left
bind pad2:ctrl;alt;shift resize +0 -10% top-left

# Nudge Window Bindings
bind pad4:ctrl;alt;cmd nudge -10% +0
bind pad6:ctrl;alt;cmd nudge +10% +0
bind pad8:ctrl;alt;cmd nudge +0 -10%
bind pad2:ctrl;alt;cmd nudge +0 +10%

