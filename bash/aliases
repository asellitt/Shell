# defaults
alias mkdir='mkdir -p'
alias sed='gsed'
alias top='htop'
alias du='du -ah'

# handy
alias ..='cd ..'
alias ~='cd ~'
alias refresh='source ~/.bashrc'
alias shutdown='sudo shutdown -h now'
alias restart='sudo reboot now'
alias cls='clear'
alias x='exit'
alias ll='ls -alFh'
alias la='ls -Ah'
alias rf='rm -rf'
alias v='vim'
alias g='git'
alias l='ll'
alias f='findhistory'
alias c='j'

# diagnostic
alias duh="sudo du --max-depth=2 | grep '^[0-9]*\.*[0-9]*G'"

# development
alias v='vim'
alias b='bundle'
alias be='b exec'
alias ber='be rake'
alias bes='be rspec --format documentation -b'
alias bec='be cucumber'
alias s='bes'
alias z='zeus'
alias zc='z console'
alias zt='z test --format documentation'
alias powrestart='touch ~/.pow/restart.txt'
alias irb='pry'

# fun 
alias minecraft='pushd .;cd /media/one/games/minecraft;./start.sh;popd'
alias mud='emacs -batch -l dunnet'
