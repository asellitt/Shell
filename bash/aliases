alias bec='GHERKIN_RUBY=true be cucumber'
alias bew='be unicorn_rails -c config/unicorn.rb'
alias berc='DISABLE_SPRING=true be rails c'
alias berr='DISABLE_SPRING=true be rails r'
alias berp='be pry-remote'
alias s='bes'
alias z='zeus'
alias zt='z test --format documentation'
alias zs='zt'
alias zc='GHERKIN_RUBY=true z cucumber'
alias powrestart='touch ~/.pow/restart.txt'
alias irb='pry'
alias bn='boxen'
alias replica-tunnel='ssh -fNg -L 3307:127.0.0.1:3306 reporting-db00'
alias log-into-aws-market='aws-vault login envato-customer-marketplace-app-cloudformation-user'
alias readlink='greadlink'
alias box-sync-lock-files='find ~/Box\ Sync/ -print0 | xargs -0 chflags uchg && find ~/Box\ Sync/ -type d -print0 | xargs -0 chflags nouchg'
alias run-rufo='git diff --cached --name-only --diff-filter=ACM | grep "\.rb$" | xargs bundle exec rufo'

