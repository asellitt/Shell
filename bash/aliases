# defaults
alias mkdir='mkdir -p'
alias top='htop'
alias du='du -ah'

# handy
alias ..='cd ..'
alias ~='cd ~'
alias refresh='source ~/.bashrc'
alias shutdown='sudo shutdown -h now'
alias restart='sudo reboot now'
alias cls='clear'
alias x='exit'
alias ll='ls -alFh'
alias la='ls -Ah'
alias rf='rm -rf'
alias v='vim'
alias g='git'
alias l='ll'
alias f='findhistory'
alias c='j'

# ssh
alias compile-ssh-config='echo -n > ~/.ssh/config && cat ~/.ssh/*.config > ~/.ssh/config'
alias ssh='compile-ssh-config && ssh'

# diagnostic
alias duh="sudo du --max-depth=2 | grep '^[0-9]*\.*[0-9]*G'"

# development
alias v='vim'
alias b='bundle'
alias be='b exec'
alias ber='be rake'
alias bes='be rspec --color --format documentation -b'
alias bec='GHERKIN_RUBY=true be cucumber'
alias berc='be rails c'
alias s='bes'
alias z='zeus'
alias zc='z console'
alias zt='z test --format documentation'
alias powrestart='touch ~/.pow/restart.txt'
alias irb='pry'
alias bn='boxen'

# fun
alias minecraft='pushd .;cd /media/one/games/minecraft;./start.sh;popd'
alias mud='emacs -batch -l dunnet'
