# defaults
alias mkdir='mkdir -p'
alias top='htop'
alias du='du -ah'
alias vim="vim -c 'startinsert'"

# handy
alias ..='cd ..'
alias ~='cd ~'
alias refresh='source ~/.bashrc'
alias shutdown='sudo shutdown -h now'
alias restart='sudo reboot now'
alias cls='clear'
alias x='exit'
alias ll='ls -alFh'
alias la='ls -Ah'
alias rf='rm -rf'
alias v='vim'
alias g='git'
alias l='ll'
alias f='findhistory'
alias c='j'
alias ag='ag --color --color-match 34\;46 --color-line-number 1\;33\;40 --literal --column --smart-case --numbers --nogroup'

# ssh
alias compile-ssh-config='echo -n > ~/.ssh/config && cat ~/.ssh/*.config > ~/.ssh/config'
alias ssh='compile-ssh-config && ssh'

# diagnostic
alias duh="sudo du -hxP --max-depth=2 | grep '^[0-9]*\.*[0-9]*G'"

# development
alias v='vim'
alias b='RUBY_GC_TUNE_VERBOSE=0 bundle'
alias be='b exec'
alias ber='be rake'
alias bes='be rspec --color --format documentation -b'
alias bec='GHERKIN_RUBY=true be cucumber'
alias bew='be unicorn_rails -c config/unicorn.rb'
alias berc='DISABLE_SPRING=true be rails c'
alias berr='DISABLE_SPRING=true be rails r'
alias berp='be pry-remote'
alias s='bes'
alias z='zeus'
alias zt='z test --format documentation'
alias zs='zt'
alias zc='GHERKIN_RUBY=true z cucumber'
alias powrestart='touch ~/.pow/restart.txt'
alias irb='pry'
alias bn='boxen'
alias replica-tunnel='ssh -fNg -L 3307:127.0.0.1:3306 reporting-db00'
alias fuck-you-structure-sql='git checkout -- db/structure.sql'

# fun
alias minecraft='pushd .;cd /media/one/games/minecraft;./start.sh;popd'
alias mud='emacs -batch -l dunnet'
alias weather='curl http://wttr.in/'
