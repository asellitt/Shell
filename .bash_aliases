# defaults
alias mkdir='mkdir -p'
alias ls='ls -al'
alias sed='gsed'
alias top='htop'

# handy
alias ..='cd ..'
alias ~='cd ~'
alias refresh='source ~/.bashrc'
alias shutdown='sudo shutdown -h now'
alias restart='sudo reboot now'
alias cls='clear'
alias x='exit'

# development
alias b='bundle'
alias be='b exec'
alias ber='be rake'
alias g='git'
alias powrestart='touch ~/.pow/restart.txt'

# host specific
alias minecraft='pushd .;cd /media/one/games/minecraft;./start.sh;popd'
